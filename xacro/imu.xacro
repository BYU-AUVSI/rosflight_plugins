<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Macro to add an IMU. -->
  <xacro:macro name="imu_plugin_macro"
    params="
      namespace
      parent_link
      ">

    <gazebo>
      <plugin filename="libimu_plugin.so" name="${namespace}_imu">
        <namespace>${namespace}</namespace>
        <link_name>${parent_link}</link_name>
      </plugin>
    </gazebo>

  </xacro:macro>

</robot>
